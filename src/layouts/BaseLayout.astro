---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  path?: string;
}

const {
  title,
  description = "Portfolio of Matteo Curcio. Post, motion, and training.",
  path = "/"
} = Astro.props;

const canonical = new URL(path, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical.href} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical.href} />
    <meta property="og:site_name" content="Matteo Curcio" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:opsz,wght@9..144,400;9..144,500;9..144,600&family=Manrope:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <header class="site-header">
      <div class="shell nav">
        <a class="brand" href="/">Matteo Curcio</a>
        <nav class="nav-links" aria-label="Main">
          <a href="/projects" aria-current={path.startsWith("/projects") ? "page" : undefined}>Projects</a>
          <a href="/about" aria-current={path === "/about" ? "page" : undefined}>About</a>
          <a href="/training" aria-current={path === "/training" ? "page" : undefined}>Training</a>
          <a href="/blog" aria-current={path.startsWith("/blog") ? "page" : undefined}>Blog</a>
          <a href="/color" aria-current={path === "/color" ? "page" : undefined}>Color</a>
          <a href="/editing" aria-current={path === "/editing" ? "page" : undefined}>Edit</a>
          <a href="/motion" aria-current={path === "/motion" ? "page" : undefined}>Motion</a>
          <a href="/contact" aria-current={path === "/contact" ? "page" : undefined}>Contact</a>
        </nav>
      </div>
    </header>
    <main>
      <div class="shell">
        <slot />
      </div>
    </main>
    <footer class="site-footer">
      <div class="shell">
        <p>Â© {new Date().getFullYear()} Matteo Curcio. Built for speed on Astro + Cloudflare Pages.</p>
      </div>
    </footer>
  </body>
</html>
