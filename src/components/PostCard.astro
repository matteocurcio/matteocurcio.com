---
interface Props {
  slug: string;
  title: string;
  date: string;
  excerpt: string;
  cover?: string;
  coverAlt?: string;
}

const { slug, title, date, excerpt, cover, coverAlt = "" } = Astro.props;
---

<article class="post-card">
  <a href={`/blog/${slug}/`}>
    <div class="thumb-frame">
      {cover ? <img class="thumb" src={cover} alt={coverAlt} loading="lazy" /> : <div class="thumb" />}
    </div>
    <div class="body">
      <h3>{title}</h3>
      <p class="post-meta">{date}</p>
      {excerpt ? <p>{excerpt}</p> : null}
    </div>
  </a>
</article>

