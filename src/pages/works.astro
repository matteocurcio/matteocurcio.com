---
import BaseLayout from "../layouts/BaseLayout.astro";
import { LEGACY_WORKS } from "../data/legacyPortfolio";
---

<BaseLayout title="Works | Matteo Curcio" description="Selected works." path="/works">
  <section class="works-grid" aria-label="Selected works">
    {LEGACY_WORKS.map((item) => (
      <a class="works-tile" href={`https://matteocurcio.com/work/${item.slug}`} aria-label={item.title}>
        <div class="works-media" data-hover-preview={item.video ? "true" : undefined}>
          <img src={item.image} alt={item.title} loading="lazy" />
          {item.video ? (
            <video class="works-preview" src={item.video} muted loop playsinline preload="none" aria-hidden="true" />
          ) : null}
        </div>
      </a>
    ))}
  </section>
</BaseLayout>
