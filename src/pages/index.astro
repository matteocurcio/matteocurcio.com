---
import BaseLayout from "../layouts/BaseLayout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { getCollection } from "astro:content";

const featured = (await getCollection("projects"))
  .sort((a, b) => b.data.year - a.data.year)
  .slice(0, 6);
---

<BaseLayout
  title="Matteo Curcio | Finishing and post-production workflows that remove uncertainty"
  description="Colour, edit, motion, and the operational discipline behind them. Creative finishing supported by structured workflows that protect schedules, approvals, and delivery standards."
  path="/"
>
  <section>
    <p class="kicker">Melbourne</p>
    <h1>Finishing and post-production workflows that remove uncertainty.</h1>
    <p class="post-meta">
      Colour, edit, motion, and the operational discipline behind them. Creative finishing supported by structured
      workflows that protect schedules, approvals, and delivery standards.
    </p>
  </section>

  <section class="section lane-grid">
    <article class="lane">
      <h3>For Producers</h3>
      <p>Decisive finishing with predictable approvals and delivery-ready masters.</p>
      <a class="button-link" href="/about?intent=project#contact">Start a Project</a>
    </article>

    <article class="lane">
      <h3>For Studios</h3>
      <p>Pipeline stability without creative compromise.</p>
      <a class="button-link" href="/about?intent=studio#contact">Request Workflow Review</a>
    </article>

    <article class="lane">
      <h3>For Students</h3>
      <p>Professional thinking, not hobbyist shortcuts.</p>
      <a class="button-link" href="/tutoring">Book 1:1 Resolve Session</a>
    </article>
  </section>

  <section class="section credibility-strip">
    <span>Finishing</span>
    <span>Editorial</span>
    <span>Motion</span>
    <span>Workflow Discipline</span>
    <span>Delivery Certainty</span>
  </section>

  <section class="section">
    <h2>Selected Works</h2>
    <div class="projects-grid">
      {featured.map((project) => (
        <ProjectCard
          slug={project.slug}
          title={project.data.title}
          client={project.data.client}
          year={project.data.year}
          service={project.data.service}
          excerpt={project.data.excerpt}
          cover={project.data.cover}
          coverAlt={project.data.coverAlt}
        />
      ))}
    </div>
  </section>
</BaseLayout>
